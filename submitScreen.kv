#:import utils kivy.utils

<MyGridLayout>

    # Assigning variables
    name:name
    pizza:pizza
    color:color

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            Label:
                text: "Name"
            TextInput:
                id: name
                multiline:False
                background_normal: '' # Setting the image behind the button to nothing (gets rid of the grey)
                background_color: utils.get_color_from_hex('#46AFB3')
                
            Label:
                text: "Favorite Pizza"
            TextInput:
                id: pizza
                multiline:False
                background_normal: '' # Setting the image behind the button to nothing (gets rid of the grey)
                background_color: utils.get_color_from_hex('#46AFB3')

            Label:
                text: "Favorite Color"
            TextInput:
                id: color
                multiline:False
                background_normal: '' # Setting the image behind the button to nothing (gets rid of the grey)
                background_color: utils.get_color_from_hex('#46AFB3')
        Button:
            text: "Submit"
            font_size: 32
            on_press: root.press()
            background_normal: '' # Setting the image behind the button to nothing (gets rid of the grey)
            background_color: utils.get_color_from_hex('#5DE2E7')
            